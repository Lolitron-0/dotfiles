# BEGIN_KITTY_THEME
# Adwaita dark
include current-theme.conf
# END_KITTY_THEME

font_family family="0xProto Nerd Font Mono"

tab_bar_style powerline

map ctrl+shift+t new_tab_with_cwd

enabled_layouts splits:split_axis=vertical
map ctrl+shift+enter launch --location=split --cwd=current
# map ctrl+shift+alt+w>ctrl+shift+alt+w next_window
# map ctrl+shift+alt+w>ctrl+shift+alt+h previous_window

map ctrl+shift+left neighboring_window left
map ctrl+shift+right neighboring_window right
map ctrl+shift+up neighboring_window up
map ctrl+shift+down neighboring_window down

transparency yes
background_opacity 0.6
background_blur 50

